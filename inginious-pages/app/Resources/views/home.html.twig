{# app/Resources/views/home.html.twig #}
{% extends 'base.html.twig' %}

    {% block loginButton %}
        <div>
            <img id="login-button" onclick="logout();" src='{{ asset('bundles/inginious/images/logout.png', version='1.0') }}'>
        </div>
    {% endblock %}
 {% block hero %}
     
        <section class="photos hero-banner" style="background: url('{{ banner }}') 50% 50% / cover no-repeat scroll rgba(0, 0, 0, 0);">
            <div class="inner"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="profile-content">
                        <div class="profile-photo">
                            <img src="{{ asset('bundles/inginious/images/profile-picture.png' ) }}">
                        </div>
                        <h1 class="profile-title">{{ firstName }} {{ lastName }}</h1>
                        <div class="add-cover">
                            <a href="#" class="photo-set-link">
                            <img onClick="showHideUploadPanel(this, '#upload-panel',true);return false;"  src="{{ asset('bundles/inginious/images/icon-plus-light.png' ) }}">
                                <p>Add a <br> cover photo</p>
                            </a>
                        </div>
                    </div>
                    <div class="gradient"></div>
                </div>
            </div> <!--./end container-->
        </section><!-- ./ end page content-->
     
 {% endblock %}
{% block albums %}
