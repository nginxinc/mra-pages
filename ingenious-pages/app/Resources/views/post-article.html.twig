{# app/Resources/views/home.html.twig #}
{# app/Resources/views/banners.html.twig #}
{% extends 'base.html.twig' %}
    {% block loginButton %}
        
    {% endblock %}

{% block pagebody %}
<section class="post">
    <div class="container-fluid">
        <div class="row">
            {% block hero %}
            <div class="post-hero-banner">
                <div class="post-header">
                    <img class="post-featured-image" src="{{ article[0].photo }}">

                    <div class="single-post-title">
                        <h1>{{ article[0].title }}</h1>
                        <div class="post-navigation">
                            <div class="post-prev">
                                <a href="#"><img src="{{ asset('bundles/ingenious/images/arrow-left.png') }}" alt="Author"></a>
                            </div>
                            <div class="post-next">
                                <a href="#"><img src="{{ asset('bundles/ingenious/images/arrow-right.png') }}" alt="Author"></a>
                            </div>
                        </div>
                    </div>

                    <div class="single-post-meta">
                        <div class="author-meta">
                            <img class="pull-left" src="{{ asset('bundles/ingenious/images/author-avatar.png') }}" alt="Author">
                            <h4 class="pull-left">{{ article[0].author }}</h4>
                        </div>
                        <div class="date-meta pull-left">
                            <p> <time datetime="01-13-16">{{ article[0].date | date("m/d/Y") }} </time> </p>
                        </div>
                        <div class="place-meta">
                            <img class="pull-left" src="{{ asset('bundles/ingenious/images/icon-map-marker.png') }}" alt="Location">
                            <h4 class="pull-left">{{ article[0].location }}</h4>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
            {% block article %}
            <div class="post-content">
                <div class="content-inner">
                    <p>{{ article[0].body }}</p>
                </div>

            </div>
            {% endblock %}
        </div>
    </div> <!--./end container-->
</section><!-- ./ end post content-->
{% endblock %}
