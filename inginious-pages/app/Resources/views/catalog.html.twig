
<section class="photo-set-list">
    <ul class="navlist">
        <li class="photo-set">
            <a class="photo-set-link" href="#">
                <img onClick="showHideUploadPanel(this, '#upload-panel');return false;" src="{{ asset('bundles/inginious/images/upload.png', version='1.0') }}" alt="upload-icon">
                <div class="description">Click to upload.</div>
            </a>
        </li>

    {% for album in catalog|reverse %}
        <li class="photo-set">
            <a onClick="showHidePhotoGallery('{{ catalogID }}','{{ album.name }}', '{{ album.id }}');return false;" class="photo-set-link" href="#">
                {% if album.poster_image is defined %}
                    <img src="{{ album.poster_image.thumb_url }}" alt="{{ album.name }}">
                {% endif %}
                <div class="description">{{ album.name }}</div>
            </a>
        </li>
    {% endfor %}
    </ul>
</section>
<div id="upload-panel" class="adjustment-controls-panel">
    <form id="album-upload" action="{{ uploader }}" method="post" >
        <img class="close-button" alt="closeButton" src="{{ asset('bundles/inginious/images/close_x.png', version='1.0') }}" onclick="showHideUploadPanel(this, '#upload-panel')">
        <div class="label">
            <span>Select Images</span>
            <input id="photo-input" type="file" name="image" multiple="multiple" accept="image/*" required="required">
        </div>
        <div class="label">
            <span>Album Name</span>
            <input name="name" id="album-name" type="text" pattern="[A-Za-z0-9_\_\-\.\,\ ]+" required="required" placeholder="letters, numbers, spaces, '_', '-', '.' and ',': no unusual characters" maxlength="128">
        </div>
        <button id="create-album-button" type="submit" name="create-album" value="Create An Album">Create An Album</button>
        <div id="loading"></div><br>
        <div id="result">
            <div id="upload-thumbs">
            </div>
        </div>
        <div class="upload-thumb" id="upload-thumb-proto">
            <img alt='animation' src='{{ asset('bundles/inginious/images/uploading.gif', version='1.0') }}'>
            <div class="file-size"></div>
        </div>

    </form>
</div>