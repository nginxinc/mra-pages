            <div class="header-logo">
                <a href="/"><img src="{{ asset('bundles/inginious/images/logo.png') }}"></a>
            </div>
            {% endblock %}

            <div class="right-nav-btn">
            {% if catalog is defined  %}<!--User Must be logged in and PhotoManager intialized -->
                <a href="#"><img src="{{ asset('bundles/inginious/images/icon-plus.png') }}"></a>
            {% endif %}
            </div>
            
        </header> <!-- ./header end-->

        <!-- Add photo to an existent album form -->
        <div id="add-photo" class="add-photo close">
            <div class="profile-update-form">
                <h1 class="page-title">Add a Photo</h1>
                <form id="photo-upload" action="{{ uploader }}" method="post" class="form-horizontal">

                    <div class="form-group">
                        <label class="col-xs-4 col-sm-3 col-sm-offset-1 control-label">Album</label>

                        <div class="col-xs-8">
                            <div class="col-xs-12 col-sm-8 select-album">
                                <select class="form-control" id="banner-album-id">
                                    {% if catalog is defined %}
                                        {% for album in catalog|reverse %}
                                            <option value="{{ album.id }}">{{ album.name }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-4 col-sm-3 col-sm-offset-1 control-label">Upload</label>

                        <div class="col-xs-8">
                            <div class="col-xs-4 update-pp">
                                <input class="form-control" id="photo-input" type="file" name="image" accept="image/*" required="required">
                                <span id="browse-button">Browse</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 update-account">
                            <button type="submit" class="btn">Add Photo</button>
                        </div>
                        <div class="col-md-12 cancel-upload">
                            <a href="#"><img src="{{ asset('bundles/inginious/images/hex-icon.png') }}"></a>
                        </div>
                    </div>
                </form>
                <div class="cancel-upload">
                    <a href="#"><img src="{{ asset('bundles/inginious/images/nav-close-light.png') }}"></a>
                </div>
            </div>
        </div> <!-- Add photo form end -->

        <div id="add-album" class="add-album close">
            <div class="profile-update-form">
                <h1 class="page-title">Add an Album</h1>
                <form id="album-upload" action="{{ uploader }}" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-4 col-sm-3 col-sm-offset-1 control-label">Name</label>
                        <div class="col-xs-8">
                            <input class="form-control" name="name" id="album-name" type="text" pattern="^[A-Za-z0-9 _.,-]+$" required="required" placeholder="letters, numbers, spaces, '_', '-', '.' and ',': no unusual characters" maxlength="128">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-4 col-sm-3 col-sm-offset-1 control-label">Add Photos</label>

                        <div class="col-xs-8">
                            <div class="col-xs-4 update-pp">
                                <input class="form-control" id="photo-input" type="file" name="image" multiple="multiple" accept="image/*" required="required">
                                <span id="browse-button">Browse</span>
                            </div>
                        </div>
                    </div> 

                    <div class="form-group">
                        <div class="col-md-12 update-account">
                            <button class="upload-button btn" id="create-album-button" type="submit" name="create-album" value="Create An Album">Add Album</button>
                        </div>
                        
                        <label class="col-sm-offset-1 control-label" id="loading"></label><br>
                        <div id="result">
                            <div id="upload-thumbs">
                            </div>
                        </div>
                        <div class="upload-thumb"  id="upload-thumb-proto">
                            <img alt='animation' src='{{ asset('bundles/inginious/images/uploading.gif', version='1.0') }}'>
                            <div class="file-size"></div>
                        </div>
                        
                        <div class="col-md-12 cancel-upload">
                            <a href="#"><img src="{{ asset('bundles/inginious/images/hex-icon.png') }}"></a>
                        </div>
                    </div>
                </form>
                <div class="cancel-upload">
                    <a href="#"><img src="{{ asset('bundles/inginious/images/nav-close-light.png') }}"></a>
                </div>
            </div>
        </div> <!-- Add photo end -->

        <div id="add-cover-photo" class="add-cover-photo close">
            <div class="profile-update-form">
                <h1 class="page-title">Add a Cover Photo</h1>
                <form id="addCoverForm" method="post" class="form-horizontal" action="#">
                    <!--div class="form-group">
                        <label class="col-xs-4 col-sm-3 col-sm-offset-1 control-label">URL</label>
                        <div class="col-xs-8">
                            <input type="text" class="form-control" name="name" placeholder="Paste a URL here" />
                        </div>
                    </div-->

                    <div class="form-group">
                        <label class="col-xs-4 col-sm-3 col-sm-offset-1 control-label">Add Photos</label>

                        <div class="col-xs-8">
                            <div class="col-xs-4 update-pp">
                                <input type="file" class="form-control"  name="file-upload">
                                <span>Browse</span>
                            </div>
                        </div>
                    </div> 

                    <div class="form-group">
                        <div class="col-md-12 update-account">
                            <button type="submit" class="btn">Add Cover Photo</button>
                        </div>
                        <div class="col-md-12 cancel-upload">
                            <a href="#"><img src="{{ asset('bundles/inginious/images/hex-icon.png') }}"></a>
                        </div>
                    </div>
                </form>
                <div class="cancel-upload">
                    <a href="#"><img src="{{ asset('bundles/inginious/images/nav-close-light.png') }}"></a>
                </div>
            </div>
        </div> <!-- Add cover photo -->
    {% endblock %}